<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">
		<title>MMORPG - Game of Thrones</title>
		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>
		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">
	</head>

	<body class="body-index">

		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<form class="form-inline form-entrar">
					<div class="form-group">				
						<button type="button" class="btn btn-success">Voltar</button>
					</div>
				</form>
			</div>
			
		</nav>

	    <div class="container">
			<% if (errors.length > 0) { %>
				<div class="alert alert-danger">
					<strong>Warning!</strong>
					<ul>
						<% for (let i = 0; i < errors.length; i++) { %>
							<li><%= errors[i].msg %></li>
						<% } %>
					</ul>
				</div>	
			<% } %>
			<form class="form-cadastro" action="/register" method="POST">
				<div class="row">
					<div class="col-xs-4">
						<div class="form-group">
							<label for="name" class="col-sm-2 col-form-label">Name</label>
							<input type="text" class="form-control" id="name" placeholder="Name"
								name="name" value="<%= data.name %>">
						</div>
					</div>
					
					<div class="col-xs-4">
						<div class="form-group">
							<label for="user" class="col-sm-2 col-form-label">User</label>
							<input type="text" class="form-control" id="user" placeholder="User"
								name="user" value="<%= data.user %>">
						</div>
					</div>
					
					<div class="col-xs-4">
						<div class="form-group">
							<label for="password" class="col-sm-2 col-form-label">Password</label>
							<input type="password" class="form-control" id="password" placeholder="Password"
								name="password" value="<%= data.password %>">
						</div>
					</div>
				</div>
				
				<div class="form-group row">
				
        			<div class="col-xs-2">
        				<img src="images/casa_arryn.jpg" class="img-responsive img-radio">
						<div style="text-align: center;">
							<input type="radio" id="left-item" name="house" value="arryn"> Casa Arryn
						</div>
        			</div>
					
					<div class="col-xs-2">
        				<img src="images/casa_baratheon.jpg" class="img-responsive img-radio">
						<div style="text-align: center;">
							<input type="radio" id="left-item" name="house" value="baratheon"> Casa Baratheon
						</div>
        			</div>
					
					<div class="col-xs-2">
        				<img src="images/casa_greyjoy.jpg" class="img-responsive img-radio">
						<div style="text-align: center;">
							<input type="radio" id="left-item" name="house" value="greyjoy"> Casa Greyjoy
						</div>
        			</div>
					
					<div class="col-xs-2">
        				<img src="images/casa_lannister.jpg" class="img-responsive img-radio">
						<div style="text-align: center;">
							<input type="radio" id="left-item" name="house" value="lannister"> Casa Lannister
						</div>
        			</div>
					
					<div class="col-xs-2">
        				<img src="images/casa_martell.jpg" class="img-responsive img-radio">
						<div style="text-align: center;">
							<input type="radio" id="left-item" name="house" value="martell"> Casa Martell
						</div>
        			</div>
					
					<div class="col-xs-2">
        				<img src="images/casa_stark.jpg" class="img-responsive img-radio">
						<div style="text-align: center;">
							<input type="radio" id="left-item" name="house" value="stark"> Casa Stark
						</div>
        			</div>
        		</div>
				
				<div class="form-group row">
				
					<div class="col-xs-3"></div>
				
        			<div class="col-xs-2">
        				<img src="images/casa_targaryen.jpg" class="img-responsive img-radio">
						<div style="text-align: center;">
							<input type="radio" id="left-item" name="house" value="targaryen"> Casa Targaryen
						</div>
        			</div>
					
					<div class="col-xs-2">
        				<img src="images/casa_tully.jpg" class="img-responsive img-radio">
						<div style="text-align: center;">
							<input type="radio" id="left-item" name="house" value="tully"> Casa Tully
						</div>
        			</div>
					
					<div class="col-xs-2">
        				<img src="images/casa_tyrell.jpg" class="img-responsive img-radio">
						<div style="text-align: center;">
							<input type="radio" id="left-item" name="house" value="tyrell"> Casa Tyrell
						</div>
        			</div>
					
					<div class="col-xs-3"></div>
				</div>		
				
			
				<div class="form-group row">
					<button type="submit" class="btn btn-primary">Confirmar cadastro</button>
				</div>
			</form>
	    </div>
	</body>
	<script>
		$(document).ready(() => {
			$('#password').val('');
		});
	</script>
</html>